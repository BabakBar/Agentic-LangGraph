# API keys for different providers (at least one is required)
OPENAI_API_KEY=your-openai-key
DEEPSEEK_API_KEY=your-deepseek-key
ANTHROPIC_API_KEY=your-anthropic-key
GOOGLE_API_KEY=your-google-key
GEMINI_API_KEY=your-gemini-key
GROQ_API_KEY=your-groq-key
USE_AWS_BEDROCK=false

# Use a fake model for testing (set to true if you don't have API keys)
USE_FAKE_MODEL=false

# Set a default model (required)
DEFAULT_MODEL=gpt-4o-mini

# Web server configuration
HOST=0.0.0.0
PORT=8000  # Use 8000 for local development, Docker will map to 8080

# Authentication secret, HTTP bearer token header is required if set
AUTH_SECRET=

# Langsmith configuration (optional)
LANGSMITH_TRACING=false
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"
LANGSMITH_API_KEY=your-langsmith-key
LANGSMITH_PROJECT=your-project-name

# Application mode (set to "dev" for local development with hot reload)
MODE=dev

# Agent URL: used in Streamlit app
# For local development:
AGENT_URL=http://localhost:8000
# For Docker (commented out to let Docker Compose override):
# AGENT_URL=http://localhost:8080
